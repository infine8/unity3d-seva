<log4net>
  <appender name="Console" type="log4net.Appender.ValionLogAppender">
    <layout type="log4net.Layout.PatternLayout">
      <!-- Pattern to output the caller's file name and line number -->
      <conversionPattern value="%5level [%thread] (%file:%line) - %message%newline" />
    </layout>
  </appender>
  <appender name="UnityConsole" type="log4net.Appender.UnityConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%6rms] %-5level %-(%file:%line) - %message%newline" />
    </layout>
  </appender>
  <appender name="TestFlight" type="log4net.Appender.TestFlightAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%6rms] %-5level %-(%file:%line) - %message%newline" />
    </layout>
  </appender>
  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <file value="${APPDATA}\log.txt" />
    <appendToFile value="true" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="2" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%6rms] %-5level %-(%file:%line) - %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="DEBUG" />
    <appender-ref ref="RollingFile" />
  </root>
</log4net>